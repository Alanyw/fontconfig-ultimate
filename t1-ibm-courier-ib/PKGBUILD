# Maintainer: bohoomil <@zoho.com>

pkgname=t1-ibm-courier-ib
pkgver=1.0.1
pkgrel=2
pkgdesc="Courier family by IBM. Type 1 version."
arch=(any)
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('fontconfig')
groups=('infinality-bundle-fonts')
install=$pkgname.install
source=(${url}/releases/individual/font/font-ibm-type1-1.0.1.tar.bz2)
sha1sums=('9bcf72bcabfcbe218ad3a96ba2a45e92ef9efbc3')

build() {
  cd "${srcdir}"
  for dir in *; do
    if [ -d "${dir}" ]; then
      pushd "${dir}"
      ./configure --prefix=/usr \
        --with-fontdir=/usr/share/fonts/${pkgname}
      make
      popd
    fi
  done
}

package() {
  cd "${srcdir}"
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  for dir in *; do
    if [ -d "${dir}" ]; then
      pushd "${dir}"
      make DESTDIR="${pkgdir}" install
      install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.${dir%-*}"
      popd
    fi
  done
  rm -f "${pkgdir}"/usr/share/fonts/${pkgname}/fonts.*
}
