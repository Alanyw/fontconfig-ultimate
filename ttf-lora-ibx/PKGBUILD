# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-lora-ibx
pkgver=1.014
pkgrel=2
depends=('fontconfig')
pkgdesc="Lora is a well-balanced contemporary serif with roots in calligraphy. It is a text typeface with moderate contrast well suited for body text."
url="http://www.cyreal.org/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts-extra')
source=("http://www.google.com/webfonts/download?kit=iwrHM7FQEcKgsUvDuXxrPg"
        45-lora.conf
        90-tt-lora.conf)
install=${pkgname}.install
sha1sums=('b6b6082f217511c1de7cf6edc3980df2fcb3808e'
          'c0fb0a61c994c2f57730a80f68a28014622e3e5f'
          'f22b6afa5d3fbcbf48728ceb83d7884065279efd')

package() {
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"/COPYING

  install -d -m755 "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"

  install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
  install -m755 -d "${pkgdir}"/etc/fonts/conf.d
  install -m644 ../45-lora.conf \
    "${pkgdir}"/etc/fonts/conf.avail/45-lora.conf
  install -m644 ../90-tt-lora.conf \
    "${pkgdir}"/etc/fonts/conf.avail/90-tt-lora.conf

  cd "${pkgdir}"/etc/fonts/conf.d
  ln -s ../conf.avail/45-lora.conf .
  ln -s ../conf.avail/90-tt-lora.conf .
}

