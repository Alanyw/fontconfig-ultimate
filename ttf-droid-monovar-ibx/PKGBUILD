# Contributor: Ignas Anikevicius <anikevicius at gmail dot com>
# Contributor: bohoomil <@zoho.com>

pkgname=ttf-droid-monovar-ibx
pkgver=1.0
pkgrel=4
pkgdesc="A monospacedfont created by Ascender Corporation with dotted and slashed zeros. Part of infinality-bundle-fonts."
url="http://www.cosmix.org/software/"
license=('apache')
depends=('fontconfig')
groups=('infinality-bundle-fonts-extra')
conflicts=('ttf-droid-monovar')
provides=('ttf-droid-monovar')
source=('http://www.cosmix.org/software/files/DroidSansMonoSlashed.zip'
'http://www.cosmix.org/software/files/DroidSansMonoDotted.zip')
install=$pkgname.install
arch=('any')
md5sums=('4df780cb87f2931233123117feac5e2c'
         '76a1c759e328ac15fd0d33ee9a4b3723')
        
package(){
  cd "${srcdir}"
  install -d -m755 "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m 644 DroidSansMonoSlashed.ttf \
    "${pkgdir}"/usr/share/fonts/"${pkgname}"/DroidSansMonoSlashed.ttf
  install -m 644 DroidSansMonoDotted.ttf \
    "${pkgdir}"/usr/share/fonts/"${pkgname}"/DroidSansMonoDotted.ttf
}

