# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-merriweather-ib
pkgver=1.003
pkgrel=5
depends=('fontconfig')
pkgdesc="Merriweather Serif font family by Eben Sorkin."
url="http://sorkintype.com"
conflicts=('ttf-google-webfonts-git' 'ttf-merriweather')
replaces=('ttf-merriweather')
groups=('infinality-bundle-fonts')
arch=('any')
license=('OFL-1.1')
install=$pkgname.install
source=(https://googlefontdirectory.googlecode.com/hg/ofl/merriweather/Merriweather-{Black,Bold,BoldItalic,HeavyItalic,Italic,Light,LightItalic,Regular}.ttf
        https://googlefontdirectory.googlecode.com/hg/ofl/merriweather/OFL.txt)

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}
sha1sums=('92a57aba516c68ed181d27997e9aba376151a7cc'
          '0bb5c7fcc3f30ecbe02ac3efc8772881066ec344'
          '4b1a0e5b5a94517d3164976e58c869740ae6cacf'
          '782b6026c8fab7303ec5a9a35be8f9258250a510'
          'a83fdf6a28fa98c18555ab19dc558af5cceeda6c'
          'e3155c4613b4d7af5f39283be5ff8023c858fd9b'
          '67026d43d5f6fd0b6bad407dabffa8eec44bf02a'
          'c3e1012c068735613ee6a8894344cacba39cc2d6'
          '7b4f6d175af92e1f112f227bead331981d2e70e5')
