# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-himalaya-fonts-ib
pkgver=1.0
pkgrel=2
depends=('fontconfig')
makedepends=('unrar')
pkgdesc="Himalaya fonts."
url="http://www.tibetebook.com/"
arch=('any')
groups=('infinality-bundle-fonts')
license=('Custom')
noextract=('HimalayaFonts.rar')
install=$pkgname.install
source=(http://www.tibetebook.com/nyer_mkho/demig/HimalayaFonts.rar)

prepare(){
  cd ${srcdir}
  unrar e HimalayaFonts.rar
}

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

md5sums=('8106e870c69d01ad588370af69a0a781')
