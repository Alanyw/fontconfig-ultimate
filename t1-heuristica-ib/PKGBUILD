# Maintainer: bohoomil <@zoho.com>

pkgname=t1-heuristica-ib
pkgver=1.0.1
pkgrel=1
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Heuristica is an extended version of Adobe Utopia font."
url="http://code.google.com/p/evristika/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts')
conflicts=('otf-heuristica')
install=$pkgname.install
source=(http://evristika.googlecode.com/files/heuristica-pfb-1.0.1.tar.xz)

package(){
	cd ${pkgdir}
  
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 ${srcdir}/OFL.txt "${pkgdir}/usr/share/licenses/${pkgname}"

	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ${srcdir}/*.pfb ${pkgdir}/usr/share/fonts/Type1
	install -m644 ${srcdir}/*.afm ${pkgdir}/usr/share/fonts/Type1
}

md5sums=('ab1d96bee40634c676c98600adf77aeb')
