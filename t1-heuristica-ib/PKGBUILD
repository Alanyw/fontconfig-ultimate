# Maintainer: bohoomil <@zoho.com>

pkgname=t1-heuristica-ib
pkgver=1.0.1
pkgrel=3
depends=('fontconfig')
pkgdesc="Heuristica is an extended version of Adobe Utopia font."
url="http://code.google.com/p/evristika/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts')
conflicts=('otf-heuristica')
install=$pkgname.install
source=(http://evristika.googlecode.com/files/heuristica-pfb-1.0.1.tar.xz)

package(){
  cd "${srcdir}"
  
  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d ${pkgdir}/usr/share/fonts/"${pkgname}"
  install -m644 *.{pfb,afm} ${pkgdir}/usr/share/fonts/"${pkgname}"
}

md5sums=('ab1d96bee40634c676c98600adf77aeb')
