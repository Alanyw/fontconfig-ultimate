package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 LICENSE.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"

  install -m755 -d "${pkgdir}"/etc/fonts/conf.d
  install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
  install -m644  65-ttf-noto-sans.conf \
    "${pkgdir}"/etc/fonts/conf.avail/65-ttf-noto-sans.conf
  install -m644 65-ttf-noto-sans-ui.conf \
    "${pkgdir}"/etc/fonts/conf.avail/65-ttf-noto-sans-ui.conf
  cd "${pkgdir}"/etc/fonts/conf.d
  ln -s ../conf.avail/65-ttf-noto-sans.conf .
  ln -s ../conf.avail/65-ttf-noto-sans-ui.conf .
}

