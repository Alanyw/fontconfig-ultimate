# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-aller-ib
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Free sans-serif font family by Dalton Maag Ltd."
url="http://www.daltonmaag.com/about/aller.html"
arch=('any')
groups=('infinality-bundle-fonts')
conflicts=('ttf-aller' 'ttf-aller-std')
license=('Custom')
install=$pkgname.install
source=(http://www.daltonmaag.com/Aller_Std_Family.zip)

package(){
	cd ${pkgdir}

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 ${srcdir}/"AllerFreeLicenceAgreement.pdf" "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 ${srcdir}/"EULA.pdf" "${pkgdir}/usr/share/licenses/${pkgname}"

	install -m755 -d ${pkgdir}/usr/share/fonts/TTF
	install -m644 ${srcdir}/*.ttf ${pkgdir}/usr/share/fonts/TTF
}

md5sums=('37e5a496c9c0d8945389740f8cb5a7fe')
