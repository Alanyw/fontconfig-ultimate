pkgname=ttf-pfeffer-mediaeval-ibx
_srcpkg=pfeffer_mediaeval
pkgver=1.0
pkgrel=2
depends=('fontconfig')
pkgdesc="Pfeffer Medi√¶val is the idealised image of a Carolingian minuscule."
url="http://robert-pfeffer.net"
arch=('any')
groups=('infinality-bundle-fonts-extra')
license=('Custom')
install=$pkgname.install
source=("http://robert-pfeffer.net/schriftarten/$_srcpkg.zip")
sha1sums=('dca5268f566a84d520a897e32656903dea0f05ba')

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}
