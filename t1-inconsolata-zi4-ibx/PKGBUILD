# Maintainer: bohoomil <@zoho.com>

pkgname=t1-inconsolata-zi4-ibx
pkgver=1.0.14
pkgrel=2
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Monospace font for pretty code listings and for the terminal. Type1 version from TeXLive."
url="http://www.ctan.org/tex-archive/fonts/inconsolata/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts-extra')
replaces=('t1-inconsolata-zi4')
conflicts=('t1-inconsolata-zi4' 'ttf-inconsolata' 'ttf-inconsolata-g' 'ttf-inconsolata-dz')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/inconsolata/type1/Inconsolata-zi4r.pfb"
        "http://mirrors.ctan.org/fonts/inconsolata/type1/Inconsolata-zi4b.pfb")

package(){
	cd ${pkgdir}
	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ${srcdir}/*.pfb ${pkgdir}/usr/share/fonts/Type1
}

md5sums=('6ee5981f616ec911551cb93525eb57b0'
         'a07e59b29b148b6b9e8de833a57da00a')
