# Maintainer: bohoomil <@zoho.com>

pkgname=libre-caslon-ibx
pkgname=('t1-libre-caslon-ibx' 'otf-libre-caslon-ibx')
pkgver=2013.10.15
pkgrel=1
pkgdesc="The Libre Caslon fonts designed by Pablo Impallari."
url="http://www.impallari.com/"
depends=('fontconfig')
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts-extra')
conflicts=('ttf-impallari-libre-caslon-text')
source=("http://mirrors.ctan.org/fonts/librecaslon.zip")

prepare(){
  cd "${srcdir}"/librecaslon/type1
  type1afm *.pfb
}

package_t1-libre-caslon-ibx(){
  pkgdesc="The Libre Caslon fonts designed by Pablo Impallari. Type 1 version."
  conflicts=('ttf-impallari-libre-caslon-text' 'otf-libre-caslon-ibx')
  install=${pkgname}.install

  cd "${srcdir}"/librecaslon

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 doc/OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"


  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 type1/*.{pfb,afm} "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

package_otf-libre-caslon-ibx(){
  pkgdesc="The Libre Caslon fonts designed by Pablo Impallari. OpenType version."
  conflicts=('ttf-impallari-libre-caslon-text' 't1-libre-caslon-ibx')
  install=${pkgname}.install

  cd "${srcdir}"/librecaslon

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 doc/OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 opentype/*.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

md5sums=('284eb63659c008f70d8c4c7a62d92d4e')
