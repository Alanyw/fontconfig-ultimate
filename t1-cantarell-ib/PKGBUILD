# Maintainer: bohoomil <@zoho.com>

pkgname=t1-cantarell-ib
pkgver=2.4
pkgrel=1
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Cantarell font family. Type1 version from TeXLive."
url="http://code.google.com/p/evristika/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts')
conflicts=('cantarell-fonts' 'cantarell-fonts-git' 'ttf-cantarell')
provides=('cantarell-fonts')
replaces=('cantarell-fonts')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/cantarell.zip")

prepare(){
  cd ${srcdir}/cantarell/fonts/type1/public/cantarell
  type1afm *.pfb
}

package(){
  cd ${srcdir}/cantarell

	install -m755 -d ${pkgdir}/usr/share/doc/${pkgname}
	install -m644 ./doc/fonts/cantarell/README ${pkgdir}/usr/share/doc/${pkgname}
	install -m644 ./doc/fonts/cantarell/CHANGES ${pkgdir}/usr/share/doc/${pkgname}

	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ./fonts/type1/public/cantarell/*.{pfb,afm} ${pkgdir}/usr/share/fonts/Type1
}

md5sums=('aabaa0ef7f4c5e66e4b413f9ad489027')
