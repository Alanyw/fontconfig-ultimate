# Maintainer: bohoomil <@zoho.com>

pkgname=otf-melthofonts-ext-ibx
_inst_dir=otf-melthofonts-ib
pkgver=1.21
pkgrel=3
depends=('fontconfig' "otf-melthofonts-ib=$pkgver-$pkgrel")
pkgdesc="Font for Syriac script (extended set)."
url="http://www.bethmardutho.org/index.php/resources/fonts.html"
arch=('any')
groups=('infinality-bundle-fonts-extra')
conflicts=('ttf-meltho')
license=('Custom')
install="${_inst_dir}".install
source=(http://www.bethmardutho.org/images/fonts/melthofonts-1.21.zip)
sha1sums=('6cc98545cf346ff151809f638665b42f3cf8adb8')

package(){
  cd "${srcdir}"/melthofonts-"${pkgver}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${_inst_dir}"
  install -m644 SyrCOM{Adiabene,Antioch,Batnan,BatnanBold,Ctesiphon,Jerusalem,JerusalemBold,JerusalemItalic,JerusalemOutline,Kharput,Malankara,Mardin,MardinBold,Midyat,Nisibin,NisibinOutline,QenNeshrin,Talada,TurAbdin,Urhoy,UrhoyBold}.otf  \
    "${pkgdir}"/usr/share/fonts/"${_inst_dir}"

}
