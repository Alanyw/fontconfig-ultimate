# Maintainer: bohoomil <@zoho.com>

pkgname=otf-signika-family-ib
pkgver=1.0001
pkgrel=2
depends=('fontconfig')
pkgdesc="Signika is a sans-serif with a gentle character, developed for wayfinding, signage, and other media where clarity of information is required."
url="http://fontfabric.com/signika-font/"
arch=('any')
groups=('infinality-bundle-fonts')
conflicts=('ttf-google-webfonts-git')
license=('OFL-1.1')
install=$pkgname.install
source=(http://googlefontdirectory.googlecode.com/hg/ofl/signika/src/Signika-{Regular,Bold,Light,Semibold}.otf
        http://googlefontdirectory.googlecode.com/hg/ofl/signikanegative/src/SignikaNegative-{Regular,Bold,Light,Semibold}.otf
        http://googlefontdirectory.googlecode.com/hg/ofl/signika/OFL.txt)

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

md5sums=('4e3d8a491ce6de1e628e0dfcfd11f7bf'
         'cb1a78e5477a9854afa3f61edb54c2eb'
         '357eec3ff993b224a83ea5b9e2a901ee'
         'b715954c2e6783b19cc61365edfabea4'
         '2a59b8006dfb44af286a3831c74a2d77'
         '42aeb170e04ca983f6719cdcc6b10efa'
         '47b133c21cc3b2f409553fa0de0287b2'
         '8f3ccd241d2482debba4fe6001d73471'
         '94465cd192bbf13008a6e735ca0bdf6f')
