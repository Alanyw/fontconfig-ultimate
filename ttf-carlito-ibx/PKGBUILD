# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-carlito-ibx
pkgver=1.103
pkgrel=1
_tarname=crosextrafonts-carlito
_tardate=20130920
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Carlito is a sans-serif font metrically compatible with Calibri.."
url="https://plus.google.com/106163021290874968147/posts"
arch=('any')
groups=('infinality-bundle-fonts-extra')
license=('OFL-1.1')
source=(http://gsdview.appspot.com/chromeos-localmirror/distfiles/${_tarname}-${_tardate}.tar.gz)
install=$pkgname.install

package(){
	cd ${pkgdir}

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 ${srcdir}/${_tarname}-${_tardate}/LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"

	install -m755 -d ${pkgdir}/usr/share/fonts/TTF
	install -m644 ${srcdir}/${_tarname}-${_tardate}/*.ttf ${pkgdir}/usr/share/fonts/TTF
}

md5sums=('c74b7223abe75949b4af367942d96c7a')
