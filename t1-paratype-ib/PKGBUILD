# Maintainer: bohoomil <@zoho.com>

pkgname=t1-paratype-ib
pkgver=2013.05.21
pkgrel=2
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Paratype font family. Type1 version from TeXLive."
groups=('infinality-bundle-fonts')
url="http://www.ctan.org/tex-archive/fonts/paratype/type1"
arch=('any')
license=('Custom')
conflicts=('ttf-paratype' 'ttf-ptsans' 'ttf-pt-mono' 'ttf-pt-sans' 'ttf-pt-serif')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/paratype.zip")

package(){
  cd ${srcdir}/paratype

	install -m755 -d ${pkgdir}/usr/share/doc/${pkgname}
	install -m644 ./doc/CHANGELOG ${pkgdir}/usr/share/doc/${pkgname}

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
	install -m644 ./doc/PT_Free_Font_License_eng_1.3.txt ${pkgdir}/usr/share/licenses/${pkgname}

	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ./type1/*.{pfb,pfm} ${pkgdir}/usr/share/fonts/Type1
	install -m644 ./afm/*.{afm,inf} ${pkgdir}/usr/share/fonts/Type1
}

md5sums=('0da39d8efba5bb68bffdad8439df6f7c')
