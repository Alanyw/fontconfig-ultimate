# Maintainer: bohoomil <@zoho.com>

pkgname=otf-cantoraone-ib
pkgver=1.001
pkgrel=3
depends=('fontconfig')
pkgdesc="Cantora is a friendly semi formal, semi condensed, semi sans serif. It has reminiscences of hand lettering, mixing straight and bowed stems, and natural curves."
url="http://www.impallari.com"
arch=('any')
groups=('infinality-bundle-fonts')
conflicts=('ttf-impallari-cantora')
license=('OFL-1.1')
install=$pkgname.install
source=(http://googlefontdirectory.googlecode.com/hg/ofl/cantoraone/src/CantoraOne-Regular.otf
        http://googlefontdirectory.googlecode.com/hg/ofl/cantoraone/OFL.txt)
sha1sums=('e7a89648b05efe08e5306706e34ce701810a9db2'
          '7b4f6d175af92e1f112f227bead331981d2e70e5')

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -Dm644 *.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

