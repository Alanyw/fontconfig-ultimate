# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-unfonts-core-ib
_basename=un-fonts-core
pkgver=1.0.2
_pkgrev=080608
pkgrel=2
depends=('fontconfig')
pkgdesc="Un Core family of Korean TrueType fonts."
url="http://kldp.net/projects/unfonts/"
arch=('any')
groups=('infinality-bundle-fonts')
conflicts=('ttf-unfonts-core')
license=('Custom')
install=$pkgname.install
source=(http://kldp.net/frs/download.php/4695/$_basename-$pkgver-$_pkgrev.tar.gz)

package(){
  cd "${srcdir}"/un-fonts

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 COPYING "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m755 -d "${pkgdir}"/usr/share/doc/"${pkgname}"
  install -m644 README "${pkgdir}"/usr/share/doc/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

md5sums=('87edeb65586b85d4ce10c1fab4f1e1aa')
