# Maintainer: bohoomil <@zoho.com>

pkgname=otf-andada-ibx
pkgver=1.003
pkgrel=1
depends=('fontconfig')
pkgdesc="Andada is a text font with an organic-slab serif, hybrid style, a solid design of medium stroke contrast."
url="http://www.fontsquirrel.com/fonts/andada"
arch=('any')
groups=('infinality-bundle-fonts-extra')
license=('OFL-1.1')
install=$pkgname.install
source=(http://www.fontsquirrel.com/fonts/download/andada)
sha1sums=('cefbb28f9bc1482131fec699c4f57f0e69290883')

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 'SIL Open Font License.txt' \
    "${pkgdir}"/usr/share/licenses/"${pkgname}"/OFL.txt

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -Dm644 *.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}
