post_install() {
  fc-cache -s /usr/share/fonts/otf-melthofonts-ib > /dev/null
  echo "Done."

  cat << _EOF

  If you need the entire Meltho collection,
  please install otf-melthofonts-ext-ibx, too.
  
_EOF
}

post_upgrade() {
  post_install $1
}

post_remove() {
  fc-cache -sf > /dev/null
  echo "Done."
}

op=$1
shift
$op $*

