# Maintainer: bohoomil <@zoho.com>

pkgname=otf-heuristica-ib
pkgver=1.0.1
pkgrel=5
depends=('fontconfig')
pkgdesc="Heuristica is an extended version of Adobe Utopia font."
url="http://code.google.com/p/evristika/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts')
replaces=('t1-heuristica-ib')
conflicts=('otf-heuristica' 't1-heuristica-ib')
install=$pkgname.install
source=(http://evristika.googlecode.com/files/heuristica-otf-1.0.1.tar.xz)
sha1sums=('204a39b554e3a66e673c2556b53cce5b5b0f62f5')

package(){
  cd "${srcdir}"
  
  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d ${pkgdir}/usr/share/fonts/"${pkgname}"
  install -m644 *.otf ${pkgdir}/usr/share/fonts/"${pkgname}"
}

