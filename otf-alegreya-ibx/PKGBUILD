# Maintainer: bohoomil <@zoho.com>

pkgname=otf-alegreya-ibx
pkgver=1.003
pkgrel=3
depends=('fontconfig')
pkgdesc="Alegreya is a serif typeface originally intended for literature."
url="http://www.fontsquirrel.com/fonts/alegreya"
arch=('any')
groups=('infinality-bundle-fonts-extra')
conflicts=('otf-alegreya-sans-ht-ibx')
replaces=('otf-alegreya-sans-ht-ibx')
license=('OFL-1.1')
install=$pkgname.install
source=(http://mirrors.ctan.org/fonts/alegreya.zip)
sha1sums=('81381e9ac9b3b19fca01f82fc92b347819545b7e')

package(){
  cd "${srcdir}"/alegreya

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 doc/OFL.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -Dm644 opentype/*.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}
