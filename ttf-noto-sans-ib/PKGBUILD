# Maintainer: bohoomil <@zoho.com>

pkgname=ttf-noto-sans-ib
pkgver=1.04
pkgrel=3
depends=('fontconfig')
pkgdesc="Noto Sans family: extended Latin set and UI."
url="http://code.google.com/p/googlefontdirectory/"
arch=('any')
groups=('infinality-bundle-fonts')
conflicts=('ttf-noto' 'ttf-noto-svn' 'ttf-google-webfonts-git')
license=('Apache')
install=$pkgname.install
source=(https://googlefontdirectory.googlecode.com/hg/apache/notosans/LICENSE.txt
        https://googlefontdirectory.googlecode.com/hg/apache/notosans/NotoSans-{Bold,BoldItalic,Italic,Regular}.ttf
        https://googlefontdirectory.googlecode.com/hg/apache/notosansui/NotoSansUI-{Bold,BoldItalic,Italic,Regular}.ttf
        https://googlefontdirectory.googlecode.com/hg/apache/notosanssymbols/NotoSansSymbols-Regular.ttf)

package(){
  cd "${srcdir}"

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 LICENSE.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 *.ttf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

sha1sums=('2b8b815229aa8a61e483fb4ba0588b8b6c491890'
