# Maintainer: bohoomil <@zoho.com>

pkgname=t1-lato-ibx
pkgver=2.2
pkgrel=2
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Lato is a sanserif type­face family designed in the Summer 2010 by Warsaw-based designer Łukasz Dziedzic. Type1 version from TeXLive."
url="http://www.latofonts.com/"
arch=('any')
groups=('infinality-bundle-fonts-extra')
license=('OFL-1.1')
conflicts=('ttf-lato')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/lato.zip")

prepare(){
  cd ${srcdir}/lato/fonts/type1/public/lato
  type1afm *.pfb
}

package(){
  cd ${srcdir}/lato

	install -m755 -d ${pkgdir}/usr/share/doc/${pkgname}
	install -m644 ./doc/fonts/lato/README ${pkgdir}/usr/share/doc/${pkgname}
	install -m644 ./doc/fonts/lato/CHANGES ${pkgdir}/usr/share/doc/${pkgname}

	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ./fonts/type1/public/lato/*.{pfb,afm} ${pkgdir}/usr/share/fonts/Type1
}

md5sums=('557d2594463009cc2a868928e964fca7')
