pkgname=t1-lato-ibx
pkgver=1.104
pkgrel=1
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Lato is a sanserif type­face family designed in the Summer 2010 by Warsaw-based designer Łukasz Dziedzic. Type1 version from TeXLive."
url="http://www.latofonts.com/"
