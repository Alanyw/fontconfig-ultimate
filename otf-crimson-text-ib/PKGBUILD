# Maintainer: bohoomil <@zoho.com>

pkgname=otf-crimson-text-ibx
_gitname=Crimson
pkgver=0.8
pkgrel=4
depends=('fontconfig')
pkgdesc="Crimson Text is an open source serif font family in the tradition of beautiful oldstyle typefaces."
url="http://aldusleaf.org/"
arch=('any')
groups=('infinality-bundle-fonts-extra')
conflicts=('otf-crimson-text')
replaces=('otf-crimson-text')
license=('Custom')
install=$pkgname.install
source=(git+https://github.com/skosch/Crimson.git)
md5sums=('SKIP')

package(){
	cd "${srcdir}"/Crimson

	install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -Dm644 otf/*.otf "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

