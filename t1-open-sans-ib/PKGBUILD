# Maintainer: bohoomil <@zoho.com>

pkgname=t1-opensans-ib
pkgver=1.10
pkgrel=2
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="Open Sans is a humanist sans serif typeface designed by Steve Matteson, Type Director of Ascender Corp. Type1 version from TeXLive."
url="http://www.ctan.org/tex-archive/fonts/opensans"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts')
replaces=('t1-opensans')
conflicts=('t1-opensans' 'ttf-opensans')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-Bold.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-BoldItalic.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-CondLight.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-CondLightItalic.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-ExtraBold.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-ExtraBoldItalic.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-Italic.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-Light.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-LightItalic.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-Regular.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-Semibold.pfb"
        "http://mirrors.ctan.org/fonts/opensans/fonts/type1/public/opensans/OpenSans-SemiboldItalic.pfb")

package(){
	cd ${pkgdir}
	install -m755 -d ${pkgdir}/usr/share/fonts/Type1
	install -m644 ${srcdir}/*.pfb ${pkgdir}/usr/share/fonts/Type1
}

