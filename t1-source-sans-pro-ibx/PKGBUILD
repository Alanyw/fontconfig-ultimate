# Maintainer: bohoomil <@zoho.com>

pkgname=t1-source-sans-pro-ibx
pkgver=2.3
pkgrel=1
depends=('fontconfig')
pkgdesc="A set of OpenType fonts designed for user interfaces. Type 1 version."
url="http://sourceforge.net/projects/sourcesans.adobe/"
arch=('any')
license=('OFL-1.1')
groups=('infinality-bundle-fonts-extra')
replaces=('adobe-source-sans-pro-fonts')
conflicts=('adobe-source-sans-pro-fonts' 'otf-source-sans-pro' 'ttf-source-sans-pro')
install=$pkgname.install
source=("http://mirrors.ctan.org/fonts/sourcesanspro.zip")

prepare(){
  cd "${srcdir}"/sourcesanspro/fonts
  type1afm *.pfb
}

package(){
  cd "${srcdir}"/sourcesanspro

  install -m755 -d "${pkgdir}"/usr/share/licenses/"${pkgname}"
  install -m644 doc/LICENSE.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"

  install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
  install -m644 fonts/*.{pfb,afm} "${pkgdir}"/usr/share/fonts/"${pkgname}"
}

md5sums=('5ea342afed69e9f2fbc38d7c75f01e93')
